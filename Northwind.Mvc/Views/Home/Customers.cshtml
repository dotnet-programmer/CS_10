@using CommonLibrary

@model IEnumerable<Customer>

<h2>@ViewData["Title"]</h2>
<table class="table">
	<thead>
		<tr>
			<th>Nazwa firmy</th>
			<th>Nazwisko kontaktu</th>
			<th>Adres</th>
			<th>Telefon</th>
		</tr>
	</thead>
	<tbody>
		@if (Model is not null)
		{
			@foreach (Customer customer in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => customer.CompanyName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => customer.ContactName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => customer.Address)
						@Html.DisplayFor(modelItem => customer.City)
						@Html.DisplayFor(modelItem => customer.Region)
						@Html.DisplayFor(modelItem => customer.Country)
						@Html.DisplayFor(modelItem => customer.PostalCode)
					</td>
					<td>
						@Html.DisplayFor(modelItem => customer.Phone)
					</td>
				</tr>
			}
		}
	</tbody>
</table>